.video-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0; 
}

.content-container {
  position: relative; /* 创建新的层叠上下文 */
  z-index: 1; /* 必须高于视频的z-index */
  background: transparent; /* 保持透明让视频可见 */
}

/* 渐显动画 */
.video-background {
  opacity: 0;
  transition: opacity 1s ease-in;
}

.video-loaded {
  opacity: 1;
}

